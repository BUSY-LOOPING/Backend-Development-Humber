@{
    ViewData["Title"] = "All Students";
}

@model List<Cumulative1.Models.Student>

<h1>Students</h1>

@if (Model == null || !Model.Any())
{
        <p>No entries found.</p>
}
else
{
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Student Number</th>
                <th>Enroll Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                    <tr>
                        <td>@teacher.Id</td>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td>@teacher.StudentNumber</td>
                        <td>@teacher.EnrollDate</td>
                    </tr>
            }
        </tbody>
    </table>
}
