@{
    ViewData["Title"] = "All Teachers";
}

@model List<Cumulative1.Models.Teacher>

<h1>Teachers</h1>

<!-- Search Form -->
<form asp-action="List" method="get" class="mb-3">
    <div class="form-group">
        <label for="startDate">Hire Date From:</label>
        <input type="date" class="form-control" id="startDate" name="startDate" />
    </div>
    <div class="form-group">
        <label for="endDate">Hire Date To:</label>
        <input type="date" class="form-control" id="endDate" name="endDate" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model == null || !Model.Any())
{
    <p>No entries found.</p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@teacher.HireDate</td>
                <td>@teacher.Salary</td>
            </tr>
        }
    </tbody>
</table>
}
